{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node"]
  },
  "exclude": ["./build", "node_modules", "tests"],
  "include": ["**/*"]
}
